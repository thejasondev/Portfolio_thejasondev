---
import SEO from '../components/SEO.astro';
import Prefetch from '../components/Prefetch.astro';

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  type?: string;
  datePublished?: string;
  dateModified?: string;
  author?: string;
  alternateLocale?: string[];
}

const { 
  title, 
  description, 
  keywords, 
  image, 
  type,
  datePublished,
  dateModified,
  author,
  alternateLocale
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO 
      title={title}
      description={description}
      keywords={keywords}
      image={image}
      type={type}
      datePublished={datePublished}
      dateModified={dateModified}
      author={author}
      alternateLocale={alternateLocale}
    />
    <Prefetch />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="preload" as="font" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" crossorigin>
  </head>
  <body class="bg-[#fafafa]">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-playfair: 'Playfair Display', serif;
    --font-inter: 'Inter', sans-serif;
  }
  html {
    font-family: var(--font-inter);
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-playfair);
  }
</style>