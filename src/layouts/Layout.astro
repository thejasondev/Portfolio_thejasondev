---
import SEO from '../components/SEO.astro';
import Prefetch from '../components/Prefetch.astro';
import '../styles/global.css';
import '../styles/animations.css';

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  type?: string;
  datePublished?: string;
  dateModified?: string;
  author?: string;
  alternateLocale?: string[];
}

const { 
  title, 
  description, 
  keywords, 
  image, 
  type,
  datePublished,
  dateModified,
  author,
  alternateLocale
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO y metadatos -->
    <SEO 
      title={title}
      description={description}
      keywords={keywords}
      image={image}
      type={type}
      datePublished={datePublished}
      dateModified={dateModified}
      author={author}
      alternateLocale={alternateLocale}
    />
    <Prefetch />
    
    <!-- Optimizar carga de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white text-gray-900 antialiased selection:bg-indigo-100 selection:text-indigo-900">
    <slot />
    
    <!-- Vercel Speed Insights -->
    <script>
      const isVercelProduction = 
        typeof window !== 'undefined' && 
        (window.location.hostname.endsWith('.vercel.app') || 
         window.location.hostname === 'thejasondev.vercel.app' ||
         window.location.hostname.includes('vercel'));
      
      if (isVercelProduction) {
        window.addEventListener('load', function() {
          try {
            // @ts-ignore
            if (typeof window.va === 'undefined') {
              const script = document.createElement('script');
              script.src = '/_vercel/speed-insights/script.js';
              script.defer = true;
              script.dataset.sdkn = '@vercel/speed-insights';
              script.dataset.sdkv = '1.0.0';
              document.body.appendChild(script);
            }
          } catch (e) {
            console.error('Vercel Speed Insights failed to load:', e);
          }
        });
      }
    </script>
    
    <script>
      // Service Worker Registration
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(err => {
            console.log('SW registration failed: ', err);
          });
        });
      }
    </script>
  </body>
</html>