---
import SEO from '../components/SEO.astro';
import Prefetch from '../components/Prefetch.astro';
import '../styles/animations.css';

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  type?: string;
  datePublished?: string;
  dateModified?: string;
  author?: string;
  alternateLocale?: string[];
}

const { 
  title, 
  description, 
  keywords, 
  image, 
  type,
  datePublished,
  dateModified,
  author,
  alternateLocale
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO 
      title={title}
      description={description}
      keywords={keywords}
      image={image}
      type={type}
      datePublished={datePublished}
      dateModified={dateModified}
      author={author}
      alternateLocale={alternateLocale}
    />
    <Prefetch />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap&display=swap" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"></noscript>
    
    <!-- Estilos críticos inline para evitar CLS -->
    <style is:inline>
      /* Estilos mínimos para evitar CLS durante la carga */
      body { background-color: #fafafa; font-family: sans-serif; }
      .font-playfair { font-family: 'Playfair Display', serif; }
      h1, h2, h3, h4, h5, h6 { font-family: 'Playfair Display', serif; }
    </style>
  </head>
  <body class="bg-[#fafafa]">
    <slot />
    <!-- Vercel Speed Insights: Solo se carga en producción en Vercel -->
    <script>
      // Comprobar si estamos en un entorno de Vercel
      const isVercelProduction = 
        typeof window !== 'undefined' && 
        (window.location.hostname.endsWith('.vercel.app') || 
         window.location.hostname === 'thejasondev.vercel.app' ||
         
         window.location.hostname.includes('vercel'));
      
      if (isVercelProduction) {
        window.addEventListener('load', function() {
          try {
            // @ts-ignore - Vercel Speed Insights
            if (typeof window.va === 'undefined') {
              const script = document.createElement('script');
              script.src = '/_vercel/speed-insights/script.js';
              script.defer = true;
              script.dataset.sdkn = '@vercel/speed-insights';
              script.dataset.sdkv = '1.0.0';
              document.body.appendChild(script);
            }
          } catch (e) {
            console.log('Vercel Speed Insights no pudo cargarse:', e);
          }
        });
      }
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-playfair: 'Playfair Display', serif;
    --font-inter: 'Inter', sans-serif;
  }
  html {
    font-family: var(--font-inter);
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-playfair);
  }
</style>