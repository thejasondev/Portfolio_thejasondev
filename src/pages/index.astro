---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import Services from '../components/Services.astro';
import Footer from '../components/Footer.astro';

// Datos estructurados para SEO
const pageTitle = "thejasondev | Jason Guerra - Desarrollador Frontend Freelance Cuba";
const pageDescription = "thejasondev es Jason Guerra, desarrollador frontend freelance en La Habana, Cuba. Portfolio profesional especializado en crear sitios web modernos, rápidos y optimizados para SEO con Astro, React, Next.js, TypeScript y TailwindCSS.";
const pageKeywords = "thejasondev, Jason Guerra, desarrollador frontend, diseño web, Astro, React, Cuba, freelance";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  datePublished="2025-04-21"
  dateModified={new Date().toISOString().split('T')[0]}
  type="website"
>
  <Header />
  
  <main>
    <!-- Schema.org ProfilePage -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "@id": "https://thejasondev.vercel.app/#person",
        "name": "Jason Guerra",
        "alternateName": "thejasondev",
        "jobTitle": "Desarrollador Frontend",
        "sameAs": [
          "https://github.com/thejasondev",
          "https://linkedin.com/in/thejasondev",
          "https://instagram.com/thejasondev",
          "https://wa.me/+5353118193"
        ]
      }
    })}></script>
    
    <Hero />
    
    <Projects />
    
    <Services />
    
    <Footer />
  </main>
</Layout>

