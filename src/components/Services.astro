---
import { Icon } from "astro-icon/components";
import { services, getWhatsappLink } from "../data/services";
---

<section id="services" class="section-padding bg-gradient-to-b from-neutral-50 to-white relative overflow-hidden">
  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20 animate-fade-in-up">
      <h2 class="text-3xl md:text-5xl font-bold font-heading mb-6 text-black">
        Servicios <span class="text-gradient-gold">Premium</span>
      </h2>
      <p class="text-lg text-neutral-600 leading-relaxed font-light">
        Soluciones personalizadas para elevar tu presencia digital con diseños modernos y funcionales.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="group relative liquid-glass rounded-3xl p-8 border border-white/80 hover:border-gold/40 hover:liquid-glass-gold transition-all duration-500 hover:-translate-y-2 flex flex-col shadow-xl hover:shadow-2xl"
        >
          {/* Top Gold Accent Bar */}
          <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-gold via-gold-light to-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 rounded-t-3xl"></div>

          <div class="mb-6">
            <div class="w-14 h-14 rounded-2xl bg-black/90 text-gold flex items-center justify-center mb-6 group-hover:bg-gradient-to-br group-hover:from-black group-hover:to-neutral-800 transition-all duration-300 shadow-lg">
              <Icon name={index === 0 ? "mdi:rocket-launch" : index === 1 ? "mdi:chart-line" : "mdi:star"} class="w-7 h-7" />
            </div>
            
            <h3 class="text-2xl font-bold font-heading text-black mb-3">
              {service.title}
            </h3>
            <p class="text-neutral-600 leading-relaxed font-light">
              {service.description}
            </p>
          </div>

          <ul class="space-y-3 mb-8 flex-grow">
            {service.features.map(feature => (
              <li class="flex items-start gap-3 text-neutral-600">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-gold flex-shrink-0 mt-0.5" />
                <span class="text-sm font-light">{feature}</span>
              </li>
            ))}
          </ul>

          <div class="pt-6 border-t border-neutral-100">
            <div class="flex items-end gap-2 mb-6">
              <span class="text-3xl font-bold text-black font-heading">{service.price}</span>
              {service.price !== "Precio a consultar" && <span class="text-neutral-500 text-sm mb-1 font-light">/ pago único</span>}
            </div>
            
            <a
              href={getWhatsappLink(service.message)}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full btn-gold flex items-center justify-center gap-2 group/btn"
            >
              Contratar
              <Icon name="mdi:arrow-right" class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" />
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>