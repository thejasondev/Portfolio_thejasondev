---
import { Icon } from "astro-icon/components";
import { services, getWhatsappLink } from "../data/services";
---

<section id="services" class="py-20 bg-gradient-to-b from-gray-50 to-white overflow-hidden">
  <div class="container mx-auto px-4 relative">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute -top-20 -right-20 w-64 h-64 bg-gray-100 rounded-full opacity-30 blur-3xl"></div>
    <div class="absolute -bottom-32 -left-20 w-80 h-80 bg-gray-200 rounded-full opacity-20 blur-3xl"></div>
    
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-gray-900 font-playfair animate-fade-up">
      Servicios
    </h2>
    
    <p class="text-center text-gray-600 mb-16 max-w-xl mx-auto animate-fade-up animation-delay-100">
      Soluciones personalizadas para hacer realidad tu presencia digital con diseños modernos y funcionales.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 relative z-10">
      {services.map((service, index) => (
        <div 
          class="bg-white rounded-2xl overflow-hidden group hover:shadow-xl transition-all duration-500 border border-gray-100 relative animate-fade-up flex flex-col"
          style={`animation-delay: ${index * 150}ms`}
        >
          <!-- Borde gradiente superior -->
          <div class="h-2 bg-gradient-to-r from-gray-800 via-gray-700 to-gray-900 transform scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-500"></div>
          
          <!-- Círculo decorativo -->
          <div class="absolute -top-10 -right-10 w-20 h-20 bg-gray-900/5 rounded-full transform scale-0 group-hover:scale-100 transition-transform duration-500"></div>
          
          <div class="p-8 flex-grow">
            <div class="flex items-start justify-between mb-5">
              <h3 class="text-2xl font-bold text-gray-900 font-playfair group-hover:translate-x-1 transition-transform duration-300">
                {service.title}
              </h3>
              <div class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 group-hover:bg-gray-900 transition-colors duration-300">
                <Icon name={index === 0 ? "mdi:rocket-launch" : index === 1 ? "mdi:chart-line" : "mdi:star"} class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors duration-300" />
              </div>
            </div>
            
            <p class="text-gray-600 mb-6 group-hover:text-gray-800 transition-colors">
              {service.description}
            </p>
            
            <ul class="space-y-2 mb-8">
              {service.features.map(feature => (
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-5 h-5 rounded-full bg-gray-100 flex items-center justify-center mt-0.5 mr-3 group-hover:bg-gray-200 transition-colors">
                    <Icon name="mdi:check" class="w-3.5 h-3.5 text-gray-700" />
                  </span>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="mt-auto px-8 pb-8">
            <div class="flex items-center justify-between mb-6">
              <span class="text-gray-900 font-bold text-3xl">{service.price}</span>
              <span class="text-sm text-gray-500">Precio único</span>
            </div>
            
            <a
              href={getWhatsappLink(service.message)}
              target="_blank"
              rel="noopener noreferrer"
              class="group inline-flex items-center justify-center w-full py-3.5 px-6 bg-gray-900 hover:bg-gray-800 text-white rounded-xl transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
            >
              <Icon name="mdi:whatsapp" class="w-5 h-5 mr-2" />
              <span>Contratar</span>
              <span class="ml-2 opacity-0 group-hover:opacity-100 transform translate-x-[-10px] group-hover:translate-x-0 transition-all duration-300">→</span>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Badge flotante -->
    <div class="absolute top-1/2 right-0 transform -translate-y-1/2 hidden xl:block">
      <div class="bg-white py-2 px-4 rounded-l-full shadow-md border border-gray-100 text-gray-600 transform hover:translate-x-[-5px] transition-transform duration-300">
        <span class="font-medium">Personalizable</span>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de hover para los elementos de la lista */
  li:hover span:last-child {
    @apply text-gray-900 transition-colors duration-200;
  }
  
  /* Clases de animación */
  .animation-delay-100 {
    animation-delay: 100ms;
  }
  
  /* Efecto de elevación en tarjetas */
  .group:hover {
    transform: translateY(-5px);
  }
</style>