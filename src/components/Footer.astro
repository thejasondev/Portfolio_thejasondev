---
import { Icon } from "astro-icon/components";

const socialLinks = [
  { name: "GitHub", icon: "mdi:github", url: "https://github.com/thejasondev" },
  { name: "LinkedIn", icon: "mdi:linkedin", url: "https://linkedin.com/in/thejasondev" },
  { name: "Instagram", icon: "mdi:instagram", url: "https://instagram.com/thejasondev" },
  { name: "Twitter", icon: "mdi:twitter", url: "https://twitter.com/thejasondev" },
];

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-black text-white py-16 md:py-20">
  {/* Subtle Gradient Overlay */}
  <div class="absolute inset-0 bg-gradient-to-t from-black via-neutral-900 to-black opacity-90"></div>
  
  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
      
      <!-- Brand & Tagline -->
      <div class="text-center md:text-left space-y-4">
        <a href="#" class="inline-block text-3xl font-bold font-heading tracking-tight text-gradient-gold hover:opacity-80 transition-opacity">
          {'{ thejasondev }'}
        </a>
        <p class="text-neutral-400 text-sm font-light max-w-xs mx-auto md:mx-0 leading-relaxed">
          Desarrollador Frontend especializado en crear experiencias digitales premium, funcionales y memorables.
        </p>
      </div>

      <!-- Social Links with Liquid Glass -->
      <div class="flex justify-center md:justify-end gap-4">
        {socialLinks.map(social => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="p-4 rounded-full liquid-glass-dark hover:liquid-glass-gold text-neutral-400 hover:text-black transition-all duration-300 transform hover:-translate-y-1"
            aria-label={`Visitar mi perfil de ${social.name}`}
          >
            <Icon name={social.icon} class="w-5 h-5" />
          </a>
        ))}
      </div>
    </div>

    <!-- Copyright & Links -->
    <div class="border-t border-neutral-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-6 text-xs text-neutral-500 font-medium uppercase tracking-widest">
      <p class="hover:text-gold transition-colors">
        &copy; {currentYear} Jason Guerra
      </p>
      <nav class="flex flex-wrap justify-center gap-6">
        <a href="#about" class="hover:text-gold transition-colors">Sobre m√≠</a>
        <a href="#projects" class="hover:text-gold transition-colors">Proyectos</a>
        <a href="#services" class="hover:text-gold transition-colors">Servicios</a>
        <a href="#contact" class="hover:text-gold transition-colors">Contacto</a>
      </nav>
    </div>
  </div>
</footer>
