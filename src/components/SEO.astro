---
export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  canonicalURL?: URL | string;
  type?: string;
  author?: string;
  datePublished?: string;
  dateModified?: string;
  alternateLocale?: string[];
}

const {
  title,
  description,
  keywords,
  image = "/profile-pic/profile_pic_optimized.webp",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = "website",
  author = "Jason Guerra",
  datePublished = new Date().toISOString().split('T')[0],
  dateModified = new Date().toISOString().split('T')[0],
  alternateLocale = ["en_US"]
} = Astro.props;

// Asegúrese de que la imagen tenga una URL completa
const imageUrl = new URL(image, Astro.site).toString();
const primaryDomain = "https://thejasondev.vercel.app";
// Usar solo la URL principal como canónica sin barra al final para evitar duplicados
const finalCanonicalUrl = primaryDomain;
---

<!-- SEO Básico -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="publisher" content="Jason Guerra (thejasondev)" />
<meta name="copyright" content="Jason Guerra (thejasondev)" />
<meta name="owner" content="Jason Guerra" />
<meta name="designer" content="Jason Guerra (thejasondev)" />
<meta name="web_author" content="Jason Guerra (thejasondev)" />
<link rel="canonical" href={finalCanonicalUrl} />

<!-- Enlaces alternativos para indicar cambio de dominio -->
<link rel="alternate" href="https://thejasondev.vercel.app/" hreflang="x-default" />
<link rel="alternate" href="https://thejasondev.vercel.app/" hreflang="es" />

<!-- Control de indexación y seguimiento -->
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

<!-- Información del autor -->
<link rel="author" href="/humans.txt" />

<!-- Verificación de Google -->
<meta name="google-site-verification" content="A7BT_C6ClgkaWHA9brgG3v0v7gG-1NeclQ6jCfvQF8U" />

<!-- Meta para rendimiento web -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
<meta name="view-transition" content="same-origin" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="format-detection" content="telephone=no" />

<!-- Nombre y alias para buscadores -->
<meta name="application-name" content="Jason Guerra | thejasondev" />
<meta name="creator" content="Jason Guerra (thejasondev)" />
<meta name="subject" content="Portfolio de Jason Guerra - Desarrollador Frontend (thejasondev)" />

<!-- Meta tags para Knowledge Graph de Google -->
<meta itemprop="name" content="Jason Guerra | thejasondev" />
<meta itemprop="description" content={description} />
<meta itemprop="image" content={imageUrl} />
<meta name="thumbnail" content={imageUrl} />

<!-- Información de contacto y redes sociales -->
<meta name="contact" content="contact@thejasondev.com" />
<meta name="reply-to" content="contact@thejasondev.com" />
<meta property="profile:first_name" content="Jason" />
<meta property="profile:last_name" content="Guerra" />
<meta property="profile:username" content="thejasondev" />

<!-- Meta tags para mejorar presencia en búsquedas -->
<meta name="classification" content="Desarrollo Web, Frontend, Portfolio" />
<meta name="category" content="Technology" />
<meta name="coverage" content="Worldwide" />
<meta name="distribution" content="Global" />
<meta name="rating" content="General" />
<meta name="target" content="all" />
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={finalCanonicalUrl} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Jason Guerra - Desarrollador Frontend" />
<meta property="og:site_name" content="Jason Guerra - Desarrollador Frontend" />
<meta property="og:locale" content="es_ES" />
<meta property="article:author" content="Jason Guerra (thejasondev)" />
{alternateLocale.map(locale => (
  <meta property="og:locale:alternate" content={locale} />
))}
<meta property="og:updated_time" content={dateModified} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:url" content={finalCanonicalUrl} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:image:alt" content="Jason Guerra | Desarrollador Frontend" />
<meta name="twitter:creator" content="@thejasondev" />
<meta name="twitter:site" content="@thejasondev" />

<!-- Favicon y App Icons -->
<link rel="icon" href="/web-dev.png" type="image/png" />
<link rel="icon" href="/web-dev.png" type="image/png" sizes="16x16" />
