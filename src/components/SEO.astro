---
export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  canonicalURL?: URL | string;
  type?: string;
  author?: string;
  datePublished?: string;
  dateModified?: string;
  alternateLocale?: string[];
}

const {
  title,
  description,
  keywords,
  image = "/profile-pic/profile_pic_optimized.webp",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = "website",
  author = "Jason Guerra",
  datePublished = new Date().toISOString().split('T')[0],
  dateModified = new Date().toISOString().split('T')[0],
  alternateLocale = ["en_US"]
} = Astro.props;

// Asegúrese de que la imagen tenga una URL completa
const imageUrl = new URL(image, Astro.site).toString();
const primaryDomain = "https://thejasondev.vercel.app";
// Usar solo la URL principal como canónica sin barra al final para evitar duplicados
const finalCanonicalUrl = primaryDomain;
---

<!-- SEO Básico -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<link rel="canonical" href={finalCanonicalUrl} />

<!-- Enlaces alternativos para indicar cambio de dominio -->
<link rel="alternate" href="https://thejasondev.vercel.app/" hreflang="x-default" />
<link rel="alternate" href="https://thejasondev.vercel.app/" hreflang="es" />

<!-- Control de indexación y seguimiento -->
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

<!-- Información del autor -->
<link rel="author" href="/humans.txt" />

<!-- Verificación de Google -->
<meta name="google-site-verification" content="A7BT_C6ClgkaWHA9brgG3v0v7gG-1NeclQ6jCfvQF8U" />

<!-- Meta para rendimiento web -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
<meta name="view-transition" content="same-origin" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="format-detection" content="telephone=no" />

<!-- Nombre y alias para buscadores -->
<meta name="application-name" content="Jason Guerra | thejasondev" />
<meta name="creator" content="Jason Guerra (thejasondev)" />
<meta name="subject" content="Portfolio de Jason Guerra - Desarrollador Frontend (thejasondev)" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={finalCanonicalUrl} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Jason Guerra - Desarrollador Frontend" />
<meta property="og:site_name" content="Jason Guerra - Desarrollador Frontend" />
<meta property="og:locale" content="es_ES" />
<meta property="article:author" content="Jason Guerra (thejasondev)" />
{alternateLocale.map(locale => (
  <meta property="og:locale:alternate" content={locale} />
))}
<meta property="og:updated_time" content={dateModified} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:url" content={finalCanonicalUrl} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:image:alt" content="Jason Guerra | Desarrollador Frontend" />
<meta name="twitter:creator" content="@thejasondev" />
<meta name="twitter:site" content="@thejasondev" />

<!-- Favicon y App Icons -->
<link rel="icon" href="/web-dev.png" type="image/png" />
<link rel="icon" href="/web-dev.png" type="image/png" sizes="16x16" />
<link rel="icon" href="/web-dev.png" type="image/png" sizes="32x32" />
<link rel="apple-touch-icon" href="/web-dev.png" />
<link rel="manifest" href="/manifest.json" />

<!-- Tipo de app para dispositivos móviles -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black" />
<meta name="apple-mobile-web-app-title" content="Jason Guerra" />
<meta name="theme-color" content="#0f172a" />
<meta name="msapplication-TileColor" content="#0f172a" />
<meta name="msapplication-config" content="/browserconfig.xml" />

<!-- DNS Prefetch para recursos externos -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />


<!-- Structured Data / JSON-LD para persona -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": `${primaryDomain}/#person`,
  "name": "Jason Guerra",
  "givenName": "Jason",
  "familyName": "Guerra",
  "alternateName": "thejasondev",
  "url": primaryDomain,
  "image": {
    "@type": "ImageObject",
    "@id": `${primaryDomain}/#personimage`,
    "url": imageUrl,
    "width": "500",
    "height": "500",
    "caption": "Jason Guerra - Desarrollador Frontend"
  },
  "jobTitle": "Desarrollador Frontend",
  "worksFor": {
    "@type": "Organization",
    "name": "Freelance"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "La Habana",
    "addressRegion": "Miramar",
    "addressCountry": "Cuba"
  },
  "sameAs": [
    "https://github.com/thejasondev",
    "https://linkedin.com/in/thejasondev",
    "https://instagram.com/thejasondev",
    "https://wa.me/+5353118193"
  ],
  "description": description,
  "knowsAbout": ["Desarrollo Web", "Frontend", "Astro", "React", "Next.js", "TypeScript", "TailwindCSS", "SEO", "JavaScript", "NextJS"],
  "knowsLanguage": ["es", "en"],
  "hasOccupation": {
    "@type": "Occupation",
    "name": "Desarrollador Frontend",
    "description": "Especialista en desarrollo de interfaces web modernas, rápidas y optimizadas para SEO",
    "skills": "HTML, CSS, JavaScript, TypeScript, React, Next.js, Astro, TailwindCSS, SEO"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": primaryDomain
  }
})}></script>

<!-- Structured Data / JSON-LD para la página web -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${primaryDomain}/#website`,
  "url": primaryDomain,
  "name": "Portfolio de Jason Guerra - Desarrollador Frontend",
  "description": description,
  "publisher": {
    "@id": `${primaryDomain}/#person`
  },
  "creator": {
    "@id": `${primaryDomain}/#person`
  },
  "inLanguage": "es",
  "copyrightYear": "2024",
  "datePublished": datePublished,
  "dateModified": dateModified
})}></script>

<!-- Structured Data / JSON-LD para página del portfolio -->
{type === "article" && (
  <script type="application/ld+json" set:html={`
{
  "@context": "https://schema.org",
  "@type": "Article",
  "@id": "${finalCanonicalUrl}#article",
  "headline": "${title}",
  "description": "${description}",
  "image": "${imageUrl}",
  "datePublished": "${datePublished}",
  "dateModified": "${dateModified}",
  "author": {
    "@id": "${primaryDomain}/#person"
  },
  "publisher": {
    "@id": "${primaryDomain}/#person"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "${finalCanonicalUrl}"
  },
  "inLanguage": "es"
}
  `}>
  </script>
)}

<!-- Structured Data / JSON-LD para breadcrumbs -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": primaryDomain,
        "name": "Inicio"
      }
    }
  ]
})}></script>

<!-- Structured Data / JSON-LD para servicios profesionales -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Desarrollo Web Frontend",
  "provider": {
    "@id": `${primaryDomain}/#person`
  },
  "description": "Servicios profesionales de desarrollo web frontend con enfoque en experiencia de usuario, rendimiento y SEO.",
  "areaServed": {
    "@type": "Country",
    "name": "Cuba"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Servicios de Desarrollo Web",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Desarrollo de Sitios Web",
          "description": "Creación de sitios web modernos y optimizados para SEO"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Optimización SEO",
          "description": "Mejora del posicionamiento web en buscadores"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Desarrollo Frontend",
          "description": "Creación de interfaces de usuario interactivas y responsivas"
        }
      }
    ]
  }
})}></script> 