---
import { siteConfig } from "../config/site";
import { 
  getPersonSchema, 
  getWebSiteSchema, 
  getOrganizationSchema, 
  getProfessionalServiceSchema,
  getSocialProfileSchema,
  getFAQSchema 
} from "../utils/seo";

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonicalURL?: URL | string;
  type?: string;
  author?: string;
  datePublished?: string;
  dateModified?: string;
  alternateLocale?: string[];
}

const {
  title = siteConfig.title,
  description = siteConfig.description,
  keywords = siteConfig.seo.keywords,
  image = "/profile-pic/profile_pic_optimized.webp",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = "website",
  author = siteConfig.author.name,
  datePublished = new Date().toISOString().split('T')[0],
  dateModified = new Date().toISOString().split('T')[0],
  alternateLocale = ["en_US"]
} = Astro.props;

// Asegúrese de que la imagen tenga una URL completa
const imageUrl = new URL(image, Astro.site).toString();
const primaryDomain = siteConfig.url;
// Usar solo la URL principal como canónica sin barra al final para evitar duplicados
const finalCanonicalUrl = primaryDomain;

// Generar schemas
const personSchema = getPersonSchema();
const websiteSchema = getWebSiteSchema();
const orgSchema = getOrganizationSchema();
const serviceSchema = getProfessionalServiceSchema();
const socialSchema = getSocialProfileSchema();
const faqSchema = getFAQSchema();
---

<!-- SEO Básico -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="publisher" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
<meta name="copyright" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
<meta name="owner" content={siteConfig.author.name} />
<meta name="designer" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
<meta name="web_author" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
<link rel="canonical" href={finalCanonicalUrl} />

<!-- Enlaces alternativos para indicar cambio de dominio -->
<link rel="alternate" href={primaryDomain} hreflang="x-default" />
<link rel="alternate" href={primaryDomain} hreflang="es" />

<!-- Control de indexación y seguimiento -->
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

<!-- Información del autor -->
<link rel="author" href="/humans.txt" />

<!-- Verificación de Google -->
<meta name="google-site-verification" content={siteConfig.seo.googleVerification} />

<!-- Meta para rendimiento web -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
<meta name="view-transition" content="same-origin" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="format-detection" content="telephone=no" />

<!-- Nombre y alias para buscadores -->
<meta name="application-name" content={`${siteConfig.author.name} | ${siteConfig.author.username}`} />
<meta name="creator" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
<meta name="subject" content={`Portfolio de ${siteConfig.author.name} - ${siteConfig.author.jobTitle} (${siteConfig.author.username})`} />

<!-- Meta tags para Knowledge Graph de Google -->
<meta itemprop="name" content={`${siteConfig.author.name} | ${siteConfig.author.username}`} />
<meta itemprop="description" content={description} />
<meta itemprop="image" content={imageUrl} />
<meta name="thumbnail" content={imageUrl} />

<!-- Información de contacto y redes sociales -->
<meta name="contact" content={siteConfig.author.email} />
<meta name="reply-to" content={siteConfig.author.email} />
<meta property="profile:first_name" content={siteConfig.author.firstName} />
<meta property="profile:last_name" content={siteConfig.author.lastName} />
<meta property="profile:username" content={siteConfig.author.username} />

<!-- Meta tags para mejorar presencia en búsquedas -->
<meta name="classification" content="Desarrollo Web, Frontend, Portfolio" />
<meta name="category" content="Technology" />
<meta name="coverage" content="Worldwide" />
<meta name="distribution" content="Global" />
<meta name="rating" content="General" />
<meta name="target" content="all" />
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
<meta name="theme-color" content={siteConfig.seo.themeColor} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={finalCanonicalUrl} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={`${siteConfig.author.name} - ${siteConfig.author.jobTitle}`} />
<meta property="og:site_name" content={`${siteConfig.author.name} - ${siteConfig.author.jobTitle}`} />
<meta property="og:locale" content="es_ES" />
<meta property="article:author" content={`${siteConfig.author.name} (${siteConfig.author.username})`} />
{alternateLocale.map(locale => (
  <meta property="og:locale:alternate" content={locale} />
))}
<meta property="og:updated_time" content={dateModified} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:url" content={finalCanonicalUrl} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:image:alt" content={`${siteConfig.author.name} | ${siteConfig.author.jobTitle}`} />
<meta name="twitter:creator" content={`@${siteConfig.author.username}`} />
<meta name="twitter:site" content={`@${siteConfig.author.username}`} />

<!-- Favicon y App Icons -->
<link rel="icon" href="/web-dev.png" type="image/png" />
<link rel="icon" href="/web-dev.png" type="image/png" sizes="16x16" />
<link rel="icon" href="/web-dev.png" type="image/png" sizes="32x32" />
<link rel="apple-touch-icon" href="/web-dev.png" />
<link rel="manifest" href="/manifest.json" />

<!-- Tipo de app para dispositivos móviles -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black" />
<meta name="apple-mobile-web-app-title" content={siteConfig.author.firstName} />
<meta name="msapplication-TileColor" content={siteConfig.seo.themeColor} />
<meta name="msapplication-config" content="/browserconfig.xml" />

<!-- DNS Prefetch/preconnect para fonts se manejan en Layout.astro (único lugar) -->

<!-- JSON-LD Schemas -->
<script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(orgSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(socialSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />