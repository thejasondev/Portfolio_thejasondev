---
import { Icon } from "astro-icon/components";

const whatsappLink = `https://wa.me/+5353118193?text=${encodeURIComponent("Hola, me interesa trabajar contigo.")}`;
---

<section id="about" class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-gradient-to-b from-neutral-50 to-white">
  {/* Animated Background Elements */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-96 h-96 bg-gold/5 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-neutral-900/5 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      
      {/* Text Content */}
      <div class="order-2 lg:order-1 space-y-8 text-center lg:text-left animate-fade-in-up">
        
        {/* Status Badge with Liquid Glass */}
        <div class="inline-flex items-center gap-3 px-5 py-2 liquid-glass-gold rounded-full text-xs font-bold uppercase tracking-widest text-black">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gold opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 5 w-2.5 bg-gold-dark"></span>
          </span>
          Disponible para proyectos
        </div>

        {/* Main Headline with Gold Gradient */}
        <h1 class="text-5xl lg:text-7xl xl:text-8xl font-bold font-heading leading-tight text-black">
          Desarrollador <br class="hidden lg:block" />
          <span class="text-gradient-gold inline-block specular-highlight">
            Frontend
          </span>
        </h1>

        {/* Tagline */}
        <p class="text-lg lg:text-xl text-neutral-600 max-w-2xl mx-auto lg:mx-0 leading-relaxed font-light">
          Especialista en crear <span class="font-semibold text-black">experiencias digitales premium</span> que combinan diseño sofisticado con rendimiento excepcional.
        </p>

        {/* CTA Buttons with new styles */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
          <a href="#projects" class="btn-primary flex items-center justify-center gap-2 group">
            Ver Proyectos
            <Icon name="mdi:arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
          </a>
          <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-secondary flex items-center justify-center gap-2">
            <Icon name="mdi:whatsapp" class="w-4 h-4" />
            Contáctame
          </a>
        </div>

        {/* Social Links */}
        <div class="pt-8 flex items-center justify-center lg:justify-start gap-6">
          <a href="https://github.com/thejasondev" target="_blank" aria-label="GitHub" 
             class="p-3 rounded-full liquid-glass hover:liquid-glass-gold text-neutral-700 hover:text-black transition-all duration-300 transform hover:-translate-y-1">
            <Icon name="mdi:github" class="w-5 h-5" />
          </a>
          <a href="https://linkedin.com/in/thejasondev" target="_blank" aria-label="LinkedIn" 
             class="p-3 rounded-full liquid-glass hover:liquid-glass-gold text-neutral-700 hover:text-black transition-all duration-300 transform hover:-translate-y-1">
            <Icon name="mdi:linkedin" class="w-5 h-5" />
          </a>
          <a href="https://instagram.com/thejasondev" target="_blank" aria-label="Instagram" 
             class="p-3 rounded-full liquid-glass hover:liquid-glass-gold text-neutral-700 hover:text-black transition-all duration-300 transform hover:-translate-y-1">
            <Icon name="mdi:instagram" class="w-5 h-5" />
          </a>
        </div>
      </div>

      {/* Image/Graphic */}
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-[500px] lg:h-[500px]">
          
          {/* Decorative Circles with Liquid Glass */}
          <div class="absolute inset-0 border-2 border-neutral-200 rounded-full scale-110 animate-pulse-slow opacity-40"></div>
          <div class="absolute inset-0 border border-gold/30 rounded-full scale-125 animate-pulse-slow opacity-30" style="animation-delay: 1s;"></div>
          
          {/* Main Profile Image */}
          <div class="relative z-10 w-full h-full rounded-full overflow-hidden border-4 border-white shadow-2xl">
            <img
              src="/profile-pic/thejasondev-profilepic.jpeg"
              alt="Jason Guerra - Frontend Developer"
              class="w-full h-full object-cover transition-all duration-700"
              loading="eager"
            />
            {/* Overlay gradient */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 hover:opacity-100 transition-opacity duration-500"></div>
          </div>
          
          {/* Floating Badge with Liquid Glass */}
          <div class="absolute bottom-8 -left-4 z-20 liquid-glass-gold p-5 rounded-2xl shadow-xl animate-float hidden sm:block max-w-xs">
            <div class="flex items-center gap-4">
              <div class="p-3 bg-black text-gold rounded-xl">
                <Icon name="mdi:star-four-points" class="w-6 h-6" />
              </div>
              <div>
                <p class="text-xs text-neutral-600 font-bold uppercase tracking-wider mb-1">Experiencia</p>
                <p class="text-2xl font-heading font-bold text-black">+3 Años</p>
              </div>
            </div>
          </div>

          {/* Golden Ring Accent */}
          <div class="absolute top-0 right-0 w-20 h-20 border-4 border-gold rounded-full -translate-y-4 translate-x-4 hidden lg:block opacity-60"></div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* Custom animations already defined in global.css */
</style>
