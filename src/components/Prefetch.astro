---
// Prefetch de imágenes clave para mejorar la experiencia de usuario
const prefetchResources = [
  '/projects-pic/havanera-screen.png',
  '/projects-pic/vitaspoon-screen.png',
  '/projects-pic/ditos-screen.png',
];

// Recursos críticos que queremos precargar (above-the-fold)
const preloadResources = [
  '/profile-pic/profile_pic_optimized.webp',
];
---

<!-- Prefetch de imágenes de proyectos (baja prioridad, no bloquea) -->
{prefetchResources.map((resource) => (
  <link rel="prefetch" href={resource} />
))}

<!-- Preload de imagen de perfil (above-the-fold, alta prioridad) -->
{preloadResources.map(resource => (
  <link rel="preload" href={resource} as="image" />
))}