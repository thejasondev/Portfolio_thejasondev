---
import { projects } from "../data/projects";
import { Icon } from "astro-icon/components";
---

<section id="projects" class="section-padding bg-white relative overflow-hidden">
  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20 animate-fade-in-up">
      <h2 class="text-3xl md:text-5xl font-bold font-heading mb-6 text-black">
        Proyectos <span class="text-gradient-gold">Destacados</span>
      </h2>
      <p class="text-lg text-neutral-600 leading-relaxed font-light">
        Una selección de trabajos donde combino diseño sofisticado y funcionalidad para crear experiencias web únicas.
      </p>
    </div>

    <div class="space-y-24">
      {projects.map((project, index) => (
        <article class="group relative grid md:grid-cols-2 gap-8 md:gap-12 lg:gap-20 items-center">
          
          {/* Project Image / Logo */}
          <div class={`relative ${index % 2 === 1 ? 'md:order-2' : ''}`}>
            
            {/* Desktop: Full Screenshot */}
            <div class="hidden md:block relative rounded-3xl overflow-hidden shadow-2xl shadow-neutral-900/10 liquid-glass border-2 border-white/80 group-hover:border-gold/40 transition-all duration-500">
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-auto transform group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
                decoding="async"
              />
            </div>

            {/* Mobile: Logo con glassmorphism */}
            <div class="md:hidden flex items-center justify-center py-2">
              <div class="project-logo-container relative w-24 h-24 rounded-2xl overflow-hidden liquid-glass border-2 border-white/80 shadow-lg shadow-neutral-900/10 transition-all duration-500">
                <img
                  src={project.logo}
                  alt={`${project.title} logo`}
                  class="w-full h-full object-contain p-2"
                  loading="lazy"
                  decoding="async"
                  width="96"
                  height="96"
                />
              </div>
            </div>

            {/* Decorative Gold Ring - solo desktop */}
            <div class="absolute -bottom-4 -right-4 w-24 h-24 border-4 border-gold rounded-full opacity-0 group-hover:opacity-60 transition-opacity duration-500 hidden lg:block"></div>
          </div>

          {/* Project Info */}
          <div class={`space-y-6 ${index % 2 === 1 ? 'md:order-1' : ''}`}>
            <div class="space-y-4">
              <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold font-heading text-black specular-highlight">
                {project.title}
              </h3>
              <p class="text-base md:text-lg text-neutral-600 leading-relaxed font-light">
                {project.description}
              </p>
            </div>

            <div class="flex flex-wrap gap-2 md:gap-3">
              {project.technologies.map((tech) => (
                <span class="px-3 md:px-4 py-1.5 md:py-2 liquid-glass text-neutral-700 text-xs font-bold uppercase tracking-wider rounded-full border border-neutral-200 hover:border-gold/40 hover:liquid-glass-gold transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>

            <div class="pt-4">
              <a 
                href={project.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center gap-2 btn-primary group/link"
              >
                Visitar Sitio
                <Icon name="mdi:arrow-right" class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" />
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  /* Animación sutil para los logos en mobile */
  .project-logo-container {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(245, 245, 245, 0.9) 100%
    );
  }

  @media (max-width: 767px) {
    .space-y-24 > * + * {
      margin-top: 3rem;
    }
  }
</style>